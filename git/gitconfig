[user]
	email = marcelijankowski123@gmail.com
	name = Marceli Jankowski
[credential]
	helper = store # https://git-scm.com/docs/git-credential-store
[alias]
	lg = log --oneline
	st = status -s
	ls = ls-files
	diffs = diff --staged
	stall = stash --all
	cane = commit --amend --no-edit # Commit Amend No Edit
  pushf = push --force-with-lease # push force (safer)
  bblame = blame -w -C -C -C # better blame
  rdir = rev-parse --show-toplevel # root directory
  lc = !git log --oneline | head -n1 # last commit
  lci = !git log --oneline | head -n1 | cut -d ' ' -f 1 # last commit identifier
  cc = !git log --oneline | wc -l # commit count
  showf = !git --no-pager show --name-only --pretty='' # show file names
[core]
	editor = $EDITOR
[help]
	autocorrect = 1
[init]
	defaultBranch = main
[branch]
	sort = -committerdate
[push]
	default = upstream
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
